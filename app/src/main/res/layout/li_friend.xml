<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/li_friend_height">

    <ImageView
        android:id="@+id/li_friend_img"
        android:layout_width="@dimen/li_friend_image_size"
        android:layout_height="@dimen/li_friend_image_size"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/li_friend_image_margin"
        android:scaleType="centerCrop"
        tools:src="@drawable/yonatan"/>

    <TextView
        android:id="@+id/li_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/li_friend_img"
        android:layout_centerVertical="true"
        android:padding="@dimen/app_default_padding"
        android:textSize="@dimen/text_size_large"
        tools:text="Yonatan V. Levin"/>

    <ImageView
        android:id="@+id/li_starwars_img"
        android:layout_width="@dimen/li_friend_vader_img_size"
        android:layout_height="@dimen/li_friend_vader_img_size"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="@dimen/li_friend_vader_img_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/vader"/>

</RelativeLayout>